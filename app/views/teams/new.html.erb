<% content_for :main_class do %>
  mx-auto flex min-h-screen w-full max-w-3xl items-center px-6 py-10
<% end %>

<div class="w-full">
  <div class="rounded-3xl border border-zinc-900 bg-zinc-950/80 p-8 shadow-sm">
    <div class="space-y-3">
      <div class="text-xs font-medium tracking-widest text-zinc-400">TEAM STATUS</div>
      <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">Share a single status page for your team.</h1>
      <p class="max-w-2xl text-sm text-zinc-300 sm:text-base">
        No login. No accounts. Create a team, share the link, and start posting.
      </p>
    </div>

    <div class="mt-6 flex flex-wrap gap-2 text-xs text-zinc-400">
      <span class="rounded-full border border-zinc-800 bg-black/40 px-3 py-1">Discord (soon)</span>
      <span class="rounded-full border border-zinc-800 bg-black/40 px-3 py-1">Slack (soon)</span>
      <span class="rounded-full border border-zinc-800 bg-black/40 px-3 py-1">More integrations coming</span>
    </div>

    <%= form_with model: @team, url: teams_path, class: "mt-8 space-y-4" do |f| %>
      <% if @team.errors.any? %>
        <div class="rounded-lg border border-red-900/60 bg-red-950/40 px-4 py-3 text-sm">
          <div class="font-medium">Couldn’t save</div>
          <ul class="mt-2 list-disc space-y-1 pl-5 text-red-200">
            <% @team.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid gap-3 sm:grid-cols-[1fr_auto] sm:items-end">
        <div class="space-y-2">
          <%= f.label :name, "Team name (optional)", class: "text-sm text-zinc-300" %>
          <%= f.text_field :name, placeholder: "My Team", class: "h-11 w-full rounded-md border border-zinc-800 bg-black px-3 text-sm text-zinc-100 placeholder:text-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-700" %>
        </div>

        <div class="flex">
          <%= f.submit "Create a team", class: "h-11 w-full rounded-md bg-white px-5 text-sm font-medium text-black transition hover:bg-zinc-200 sm:w-auto" %>
        </div>
      </div>

      <p class="text-xs text-zinc-500">You’ll get a shareable URL + API keys after creating.</p>
    <% end %>
  </div>
</div>
