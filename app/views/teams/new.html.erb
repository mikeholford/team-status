<div class="rounded-2xl border border-zinc-900 bg-zinc-950 p-6 shadow-sm">
  <div>
    <h1 class="text-lg font-semibold tracking-tight">Create a team</h1>
    <p class="mt-1 text-sm text-zinc-400">Get a UUID + API keys, then start posting statuses.</p>
  </div>

  <%= form_with model: @team, url: teams_path, class: "mt-6 space-y-4" do |f| %>
    <% if @team.errors.any? %>
      <div class="rounded-lg border border-red-900/60 bg-red-950/40 px-4 py-3 text-sm">
        <div class="font-medium">Couldnâ€™t save</div>
        <ul class="mt-2 list-disc space-y-1 pl-5 text-red-200">
          <% @team.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= f.label :name, class: "text-sm text-zinc-300" %>
      <%= f.text_field :name, required: true, class: "h-10 w-full rounded-md border border-zinc-800 bg-black px-3 text-sm text-zinc-100 placeholder:text-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-700" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Create", class: "h-10 rounded-md bg-white px-4 text-sm font-medium text-black transition hover:bg-zinc-200" %>
    </div>
  <% end %>
</div>
