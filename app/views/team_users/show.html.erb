<div class="flex items-center justify-between">
  <div class="min-w-0">
    <div class="text-sm text-zinc-500">
      <%= link_to @team.name, team_path(@team), class: "text-zinc-300 hover:text-white" %>
      <span class="px-1">›</span>
      <span class="text-zinc-400"><%= @team_user.username %></span>
    </div>
    <h1 class="mt-1 truncate text-lg font-semibold tracking-tight"><%= @team_user.username %></h1>
  </div>
</div>

<div class="mt-5 space-y-2">
  <% @status_updates.each do |update| %>
    <div class="rounded-xl border border-zinc-900 bg-zinc-950 px-4 py-3">
      <div class="flex items-baseline justify-between gap-4">
        <div class="min-w-0 truncate text-sm text-zinc-200">
          <%= update.status %>
        </div>
        <div class="shrink-0 text-right text-xs text-zinc-500">
          <%= short_time_ago(update.created_at) %>
        </div>
      </div>

      <div class="mt-1 text-xs text-zinc-600">
        <% if update.expires_at.present? %>
          expired at <%= short_datetime(update.expires_at) %>
        <% else %>
          <span class="italic">never expired</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6 flex items-center justify-between text-sm">
  <div>
    <% if @page > 1 %>
      <%= link_to "← Prev", team_team_user_path(@team, @team_user, page: @page - 1), class: "text-zinc-300 hover:text-white" %>
    <% end %>
  </div>

  <div class="text-zinc-600">
    Page <%= @page %>
  </div>

  <div>
    <% if @has_more %>
      <%= link_to "Next →", team_team_user_path(@team, @team_user, page: @page + 1), class: "text-zinc-300 hover:text-white" %>
    <% end %>
  </div>
</div>
